// Binary search problem language java

import java.util.*;

public class Binarysearch {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter the size of array: ");
        int n = sc.nextInt();

        int[] arry = new int[n];

       
        System.out.printf("Enter " + n + " sorted elements:");
        for (int i = 0; i < n; i++) {
            arry[i] = sc.nextInt();
        }

        System.out.print("Enter the item to search: ");
        int item = sc.nextInt();

        int low = 0;
        int high = arry.length - 1;
        boolean found = false;

        while (low <= high) {
            int mid = (low + high) / 2;

            if (arry[mid] == item) {
                System.out.printf("The item %d is found at index: %d", item, mid);
                found = true;
                break;
            } else if (arry[mid] < item) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        if (!found) {
            System.out.println("Item not found in the array.");
        }
    }
}
